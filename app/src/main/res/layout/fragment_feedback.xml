<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wondereight.airsensio.Fragment.FeedbackFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_tellus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <com.wondereight.airsensio.CustomView.CustomFontView.CustomFontTextView
                    android:text="@string/title_feedback"
                    style = "@style/TVTitleStyle"
                    app:textStyle="@integer/FS_light"
                    app:font="@string/font_name_opensans"/>

            </LinearLayout>
            <LinearLayout
                style="@style/vertical_space"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp">

                <EditText
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/btnSubmit"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:padding="10dp"
                    android:gravity="top|left"
                    android:scrollbars="horizontal"
                    android:overScrollMode="ifContentScrolls"
                    android:editable="true"
                    android:background="@color/white"/>
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/textColor_Green"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/btnSubmit"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:padding="@dimen/_12sdp">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:gravity="center_vertical|center_horizontal"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="X"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
