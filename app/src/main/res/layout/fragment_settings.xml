<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wondereight.sensioair.Fragment.SettingsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_settings">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:isScrollContainer="false"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/vertical_space"
                    android:layout_weight="3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingRight="@dimen/_18sdp"
                    android:orientation="vertical">

                    <com.wondereight.sensioair.CustomView.CustomFontView.CustomFontTextView
                        android:text="@string/title_settings"
                        style = "@style/TVTitleStyle"
                        app:textStyle="@integer/FS_light"
                        app:font="@string/font_name_opensans"/>

                </LinearLayout>
                <LinearLayout
                    style="@style/vertical_space"
                    android:layout_weight="3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:orientation="vertical">

                    <com.wondereight.sensioair.CustomView.CustomFontView.CustomFontTextView
                        android:text="@string/description_settings"
                        style = "@style/TVContentStyle"
                        app:textStyle="@integer/FS_light"
                        app:font="@string/font_name_opensans"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Allergens:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="vertical">
                        <!-- <com.wondereight.sensioair.CustomView.SnapBar -->
                        <com.wondereight.sensioair.CustomView.SnapBar
                            android:id="@+id/snapbar_allergens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:minHeight="1dp"
                            android:maxHeight="1dp"
                            android:progress="50"
                            android:max="100"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:thumb="@drawable/thumb">

                        </com.wondereight.sensioair.CustomView.SnapBar>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Low"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="High"/>

                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Pollution:"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="vertical">
                        <!-- <com.wondereight.sensioair.CustomView.SnapBar -->
                        <com.wondereight.sensioair.CustomView.SnapBar
                            android:id="@+id/snapbar_pollution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:minHeight="1dp"
                            android:maxHeight="1dp"
                            android:progress="50"
                            android:max="100"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:thumb="@drawable/thumb">

                        </com.wondereight.sensioair.CustomView.SnapBar>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Low"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/white"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="High"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/vertical_space"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSaveSettings"
                        style="@style/btn_save_settings"
                        android:text="@string/btn_savesettings" />

                    <TextView
                        android:id="@+id/btnSendEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/textwhitebtn"
                        android:text="@string/btn_senddata"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:focusable="true"/>

                    <LinearLayout
                        style="@style/whiteLineLayout"/>

                    <TextView
                        android:id="@+id/btnViewTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/textwhitebtn"
                        android:text="View Terms &amp; Conditions"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/vertical_space"
                    android:layout_weight="3"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>